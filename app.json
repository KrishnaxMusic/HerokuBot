{
  "name": "Heroku Bot",
  "description": "A Telegram bot to handle Heroku Bot services with payment verification and admin chat system.",
  "repository": "https://github.com/WCGKING/HerokuBot",
  "logo": "https://telegra.ph/file/29e4f4188dc43a9b5d08c.jpg",
  "keywords": ["telegram", "bot", "python", "telebot", "pymongo"],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot API Token from @BotFather",
      "required": true
    },
    "ADMIN_ID": {
      "description": "Telegram user ID of the bot admin",
      "required": true
    },
    "MONGO_URL": {
      "description": "MongoDB connection string (MongoDB Atlas recommended)",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "heroku-mongodb:free"
    }
  ]
}
